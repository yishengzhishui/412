<div class="col-md-12">
  <div class="col-md-10 col-md-offset-1">
    <div class="row">
      <div class="col-md-4">
          <%= link_to image_tag("pic-1.jpg", class: "img-rounded img-responsive img-center"), image_path(produce_jobs_path(:order => "category"))%>
          <h2 class="text-center">设计与制造</h2>
      </div>
      <div class="col-md-4 col-md-offset-4">
          <%= link_to image_tag("pic-2.jpg", class: "img-rounded img-responsive img-center"), image_path(operation_jobs_path(:order => "category"))%>
          <h2 class="text-center">海洋开发及航运</h2>
      </div>
    </div>
    <hr>
    <div class="panel panel-default">
      <div class="panel-heading text-center">
        <h1>
        招聘信息
        <div class="dropdown clearfix pull-right">
          <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            排序
              <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
              <li>
                <%= link_to("按照薪资下限排序", operation_jobs_path(:order => "by_lower_bound")) %>
              </li>
              <li>
                  <%= link_to("按照薪资上限排序", operation_jobs_path(:order => "by_upper_bound")) %>
              </li>
              <li>
                <%= link_to("按照发表时间排序", operation_jobs_path ) %>
              </li>
          </ul>
        </div>
        </h1>
      </div>
      <table class="table table-hover text-center ">
        <thead>
          <tr>
            <td>职缺</td>
            <td>类别</td>
            <td>城市</td>
            <td>薪资范围</td>
            <td>发布时间</td>
            <td>创建公司</td>
          </tr>
        </thead>
        <tbody>
          <% @jobs.each do |g| %>
            <tr>
              <td><%= link_to(g.title,job_path(g)) %></td>
              <td><%= g.category%></td>
              <td><%= g.city%></td>
              <td>
                <span class="badge badge-info">
                  <span class="fa fa-rmb"></span>
                  <%= g.wage_lower_bound%>
                  -
                  <%= g.wage_upper_bound%>
                </span>
            </td>
              <td><%= g.created_at.to_date%></td>
              <td><%= g.user.name%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="text-center">
      <%= will_paginate(@jobs, renderer: BootstrapPagination::Rails) %>
    </div>
  </div>
</div>
