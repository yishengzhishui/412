<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-3 col-md-offset-1">
        <h1><%= @job.title %></h1>
      </div>
      <div class="col-md-4 col-md-offset-4">
        <div class="job">
          <% if current_user && current_user = @job.user %>
          <%= link_to("Edit", edit_admin_job_path(@job), class: "btn btn-lg btn-primary pull-right")%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <hr>
</div>
<div class="container-fluid">
<div class="row">
    <div class="col-md-4 col-md-offset-1">
        <ul class="list-group">
            <li class="list-group-item">
                <strong>薪俸范围：</strong>
                <span class="fa fa-rmb"></span><%= @job.wage_lower_bound%>
                -
                <%= @job.wage_upper_bound%></li>
                <li class="list-group-item">
                    <strong>公司：</strong><%= @job.user.name %>
                </li>
                <li class="list-group-item">
                    <strong>创建时间：</strong><%= @job.created_at.to_date %>
                </li>
                <li class="list-group-item">
                    <strong>联系邮箱：</strong><%= @job.contact_email %>
                </li>
        </ul>
    </div>
  </div>
</div >


<div class="col-md-6 col-md-offset-1">
  <p>
    <h4>需求描述：</h4>
    <blockquote >
        <%= simple_format(@job.description) %>
    </blockquote>
  </p>
</div>
