<div class="col-md-12">
  <div class="job">
    <%= link_to("Add a job", new_admin_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |g| %>
        <tr>
          <td>
            <%= render_job_status(g)%>
          </td>
          <td><%= link_to(g.title,admin_job_path(g)) %></td>
          <td><%= g.description %></td>
          <td>
              <%= link_to("Edit", edit_admin_job_path(g), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", admin_job_path(g),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>

              <% if g.is_hidden %>
                <%= link_to("Publish",publish_admin_job_path(g), :method => :post, :class => "btn  btn-default")%>
              <% else %>
                <%= link_to("Hide", hide_admin_job_path(g),:method => :post, :class => "btn btn-default")%>
              <% end %>
          </td>
          <td>
            <%= g.created_at%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
