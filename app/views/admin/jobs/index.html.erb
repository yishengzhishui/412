<div class="col-md-12">
  <div class="job">
    <%= link_to("Add a job", new_admin_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-boldered table-striped custab">
    <thead>
      <tr>
        <td>#</td>
        <td>职缺</td>
        <td>收到履历数量</td>
        <td>薪资下限</td>
        <td>薪资上限</td>
        <td>管理选项</td>
        <td>刊登时间</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |g| %>
        <tr>
          <td>
            <%= render_job_status(g)%>
          </td>
          <td><%= link_to(g.title,admin_job_path(g)) %></td>
          <td><%= link_to(g.resumes.count , admin_job_resumes_path(g))%></td>
          <td><%= g.wage_lower_bound%></td>
          <td><%= g.wage_upper_bound%></td>
          <td>
              <%= link_to("Edit", edit_admin_job_path(g), :class => "btn btn-xs btn-info") %>
              <%= link_to("Destroy", admin_job_path(g), :method => :delete, :class => "btn btn-xs btn-danger", :data => { :confirm => "Are you sure?" }) %>
              <% if g.is_hidden %>
                <%= link_to("Publish", publish_admin_job_path(g) , :method => :post, :class => "btn btn-xs btn-success") %>
              <% else %>
                <%= link_to("Hide", hide_admin_job_path(g), :method => :post,  :class => "btn btn-xs btn-warning") %>
              <% end %>
          </td>
          <td>
            <%= g.created_at%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
